{
  "name": "tv-lines",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "standard": {
    "ignore": [
      "/dist"
    ]
  },
  "scripts": {
    "dev": "rm -rf dist/ && rollup -c rollup.dev.config.js --watch",
    "build": "rm -rf dist/ && rollup -c rollup.prod.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --colors",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wnz99/tv-lines.git"
  },
  "author": "David Fava <dfava80@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wnz99/tv-lines/issues"
  },
  "homepage": "https://github.com/wnz99/tv-lines#readme",
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "git-branch-is": "^3.1.0",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "lint-staged": "^10.1.2",
    "prettier": "1.18.2",
    "prettier-eslint": "^9.0.0",
    "pretty-quick": "^2.0.1",
    "rollup": "^2.3.3",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-uglify": "^6.0.4"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "md5": "^2.2.1",
    "rxjs": "^6.5.3",
    "updeep": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is -r \"^((?!master).)*$\" && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "pretty-quick --staged && echo 'run hook'"
    ]
  }
}
