{
  "name": "tv-lines",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "standard": {
    "ignore": [
      "/dist"
    ]
  },
  "scripts": {
    "dev": "rm -rf dist/ && rollup -c rollup.dev.config.js --watch",
    "build": "rm -rf dist/ && rollup -c rollup.prod.config.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --colors",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wnz99/tv-lines.git"
  },
  "author": "David Fava <dfava80@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wnz99/tv-lines/issues"
  },
  "homepage": "https://github.com/wnz99/tv-lines#readme",
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "setupFiles": [
      "<rootDir>/setupTests.js"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@lopatnov/rollup-plugin-uglify": "^2.1.2",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^27.3.1",
    "eslint": "^8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "git-branch-is": "^4.0.0",
    "jest": "^27.3.1",
    "jest-extended": "^1.1.0",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "prettier-eslint": "^13.0.0",
    "pretty-quick": "^3.1.2",
    "rollup": "^2.60.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-uglify": "^6.0.4",
    "terser": "^5.10.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "rxjs": "^7.4.0",
    "updeep": "^1.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-branch-is -r \"^((?!master).)*$\" && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "pretty-quick --staged && echo 'run hook'"
    ]
  }
}
